<% if (title) { %>
    <h1 class="management-title"><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>


<form class="management-form" action="/inv/addInventory" method="post">
  <h2>Add Vehicle</h2>
  <div>
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" value="<%= locals.inv_make %>" required />
    <% if (errors && errors.inv_make) { %>
      <div class="error"><%= errors.inv_make %></div>
    <% } %>
  </div>

  <div>
    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" value="<%= locals.inv_model %>" required />
    <% if (errors && errors.inv_model) { %>
      <div class="error"><%= errors.inv_model %></div>
    <% } %>
  </div>

  <div>
    <label for="inv_year">Year:</label>
    <input type="number" id="inv_year" name="inv_year" value="<%= locals.inv_year %>" required />
    <% if (errors && errors.inv_year) { %>
      <div class="error"><%= errors.inv_year %></div>
    <% } %>
  </div>

  <div>
    <label for="inv_description">Description:</label>
    <textarea id="inv_description" name="inv_description" required><%= locals.inv_description %></textarea>
    <% if (errors && errors.inv_description) { %>
      <div class="error"><%= errors.inv_description %></div>
    <% } %>
  </div>

  <div>
    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" value="<%= locals.inv_price %>" required />
    <% if (errors && errors.inv_price) { %>
      <div class="error"><%= errors.inv_price %></div>
    <% } %>
  </div>

  <div>
    <label for="inv_miles">Miles:</label>
    <input type="number" id="inv_miles" name="inv_miles" value="<%= locals.inv_miles %>" required />
    <% if (errors && errors.inv_miles) { %>
      <div class="error"><%= errors.inv_miles %></div>
    <% } %>
  </div>

  <div>
    <label for="inv_color">Color:</label>
    <input type="text" id="inv_color" name="inv_color" value="<%= locals.inv_color %>" required />
    <% if (errors && errors.inv_color) { %>
      <div class="error"><%= errors.inv_color %></div>
    <% } %>
  </div>

  <div>
    <label for="classification_id">Classification:</label>
      <!-- Assuming `classificationList` is passed as options -->
      <%- classificationList %>

    <% if (errors && errors.classification_id) { %>
      <div class="error"><%= errors.classification_id %></div>
    <% } %>
  </div>
  <div>
    <label for="inv_image">Image:</label>
    <input type="file" id="inv_image" name="inv_image" accept="image/*">
  </div>
  <div>
    <label for="inv_thumbnail">Thumbnail:</label>
    <input type="file" id="inv_thumbnail" name="inv_thumbnail" accept="image/*">
  </div>

  <button type="submit">Add Vehicle</button>
</form>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>