
<% if (loggedin === 1) { %>
  <div class="account-greeting">
    <h2>Welcome <%= accountData.account_firstname %></h2> <!-- Use accountData here -->
  </div>

  <%- messages() %>


  <!-- If the account type is Employee or Admin, show Inventory Management section -->
  <% if (accountData.account_type === 'Admin' || accountData.account_type === 'Employee') { %>
    <div class="inventory-management">
      <h3>Inventory Management</h3>
      <p><a href="/inv/manage" title="Manage Inventory">Go to Inventory Management</a></p>
    </div>
  <% } %>

  <% if (accountData.account_type === 'Admin') { %>
    <div class="inventory-management">
      <h3>Account Management</h3>
      <p><a href="/account/manage" title="Manage Account">Go to Account Management</a></p>
    </div>
  <% } %>

  <!-- Show Update Account Information link for all Clients -->
  <% if (accountData.account_type === 'Client' || accountData.account_type === 'Admin' || accountData.account_type === 'Employee') { %>
    <div class="update-account-info">
      <p><a href="/account/update/<%= accountData.id %>" title="Update Account Information">Update your account information</a></p>
    </div>
  <% } %>
<% } else { %>
  <div class="not-logged-in">
    <h2>You are not logged in. Please log in to view your account details.</h2>
  </div>
<% } %>